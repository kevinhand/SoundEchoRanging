<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <corners
            android:topLeftRadius="90dp"
            android:topRightRadius="90dp"
            android:bottomLeftRadius="90dp"
            android:bottomRightRadius="90dp"
            />
        <gradient
            android:gradientRadius="200"
            android:centerX="50%"
            android:centerY="50%"
            android:centerColor="#1D1F1E"
            android:startColor="#434647"
            android:endColor="#050505"
            android:type="radial"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="100dp"
            android:height="100dp"
            />
        <stroke
            android:width="2dp"
            android:color="#878787"
            />
    </shape>
    </item>
    <item android:drawable="@drawable/button_image"
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"/>

</layer-list>